# ============================================================
# EXEMPLE DE CONFIGURATION ENVIRONNEMENT - BACKEND
# ============================================================
# Copier ce fichier en .env et remplir avec les vraies valeurs
# Ne JAMAIS committer le fichier .env avec des valeurs réelles

# ============================================================
# SÉCURITÉ - SECRETS
# ============================================================
# Générer avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changez-moi-secret-aleatoire-securise

# ============================================================
# BASE DE DONNÉES - SUPABASE / POSTGRESQL
# ============================================================
# Format PostgreSQL: postgresql://user:password@host:port/database
# Obtenir depuis: https://app.supabase.com/project/_/settings/database
DATABASE_URL=postgresql://postgres:your-database-password@db.your-project-ref.supabase.co:5432/postgres

# ============================================================
# SUPABASE - AUTHENTIFICATION & API
# ============================================================
# Obtenir depuis: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================
# CACHE - REDIS
# ============================================================
# Format: redis://[:password]@host:port/db
REDIS_URL=redis://localhost:6379/0

# ============================================================
# AUTHENTIFICATION JWT
# ============================================================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================
# STOCKAGE CLOUD - AZURE
# ============================================================
AZURE_STORAGE_ACCOUNT=autolocostore
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=

# ============================================================
# PAIEMENTS - STRIPE
# ============================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================================
# EMAIL - SENDGRID
# ============================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@autoloco.com

# ============================================================
# MONITORING - SENTRY
# ============================================================
SENTRY_DSN=

# ============================================================
# APPLICATION
# ============================================================
APP_NAME=AUTOLOCO
APP_VERSION=2.0.0
DEBUG=False
ENVIRONMENT=development

# ============================================================
# CORS & SÉCURITÉ
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100
